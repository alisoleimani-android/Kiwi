<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.Kiwi" parent="Theme.Kiwi.Base" />

    <style name="Theme.Kiwi.Base" parent="Base.Theme">

        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>
        <item name="android:statusBarColor">@color/color_primary_variant</item>
        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorError">@color/color_error</item>

        <item name="colorOnPrimary">@color/color_on_primary</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnBackground">@color/color_on_background</item>
        <item name="colorOnSurface">@color/color_on_surface</item>
        <item name="colorOnError">@color/color_on_error</item>

        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Kiwi.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Kiwi.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Kiwi.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Kiwi.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Kiwi.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Kiwi.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Kiwi.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Kiwi.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Kiwi.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Kiwi.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Kiwi.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Kiwi.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Kiwi.Overline</item>

        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Kiwi.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Kiwi.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Kiwi.LargeComponent</item>

        <!--Component styles-->
        <item name="toolbarStyle">@style/Widget.Kiwi.Toolbar</item>
    </style>

    <style name="Base.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">
            ?android:attr/colorBackground
        </item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">
            ?attr/colorControlHighlight
        </item>
    </style>

</resources>